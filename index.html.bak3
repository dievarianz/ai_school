    console.log("Aktivitäten aktualisiert:", activities);
  }
  
  // Formatiert die Zeit als "vor X Min/Stunden/Tagen"
  function getTimeAgo(timestamp) {
    const now = new Date().getTime();
    const diff = Math.floor((now - timestamp) / 1000); // Differenz in Sekunden
    
    if (diff < 60) return 'gerade eben';
    if (diff < 120) return 'vor 1 Minute';
    if (diff < 3600) return `vor ${Math.floor(diff / 60)} Min`;
    if (diff < 7200) return 'vor 1 Stunde';
    if (diff < 86400) return `vor ${Math.floor(diff / 3600)} Stunden`;
    return `vor ${Math.floor(diff / 86400)} Tagen`;
  }
  
  // Neue Aktivität alle 2-5 Minuten hinzufügen
  function scheduleNewActivity() {
    const delay = (2 + Math.floor(Math.random() * 3)) * 60000; // 2-5 Minuten
    console.log(`Nächste Aktivität in ${delay/1000} Sekunden`);
    
    setTimeout(() => {
      // Neue Aktivität erstellen
      const newActivity = generateActivity();
      newActivity.isNew = true;
      newActivity.time = new Date().getTime();
      
      // Älteste Aktivität entfernen, wenn mehr als 4
      if (activities.length >= 4) {
        activities.pop();
      }
      
      // Neue Aktivität an den Anfang setzen
      activities.unshift(newActivity);
      
      // Vorherige neue Aktivität auf normal setzen
      if (activities.length > 1) {
        activities[1].isNew = false;
      }
      
      // Speichern und anzeigen
      localStorage.setItem('downloadActivities', JSON.stringify(activities));
      updateActivityDisplay();
      
      // Nächste Aktivität planen
      scheduleNewActivity();
    }, delay);
  }
  
  // Initialer Aufruf
  console.log("Dynamische Aktivitäten werden initialisiert...");
  setTimeout(() => {
    updateActivityDisplay();
    scheduleNewActivity();
    
    // Alle 30 Sekunden die Zeitangaben aktualisieren
