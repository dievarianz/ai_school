<script>
    document.addEventListener('DOMContentLoaded',()=>{
      // Slider navigation
      const slider=(trackSel,prevSel,nextSel,itemSel)=>{
        const track=document.querySelector(trackSel),
              prev=document.querySelector(prevSel),
              next=document.querySelector(nextSel);
        if(!track) return;
        const step=()=>document.querySelector(itemSel).offsetWidth + parseInt(getComputedStyle(track).gap);
        prev?.addEventListener('click',()=>track.scrollBy({left:-step(),behavior:'smooth'}));
        next?.addEventListener('click',()=>track.scrollBy({left: step(),behavior:'smooth'}));
      };
      slider('.slider-track','.slider-btn.prev','.slider-btn.next','.slide');
      slider('.testi-track','.testi-btn.prev','.testi-btn.next','.testimonial-card');

      // Counters
      const counters=document.querySelectorAll('.stat-value.count');
      const animateCounters=()=>counters.forEach(c=>{
        const tgt=+c.dataset.target, suf=c.dataset.suffix||'', inc=tgt/120;
        let cur=0;
        const tick=()=>{
          cur+=inc;
          c.textContent = cur>=tgt ? tgt+suf : Math.round(cur)+suf;
          if(cur<tgt) requestAnimationFrame(tick);
        };
        requestAnimationFrame(tick);
      });
      new IntersectionObserver(entries=>{
        entries.forEach(e=>{ if(e.isIntersecting){ animateCounters(); this.disconnect(); }});
      },{threshold:.4}).observe(document.querySelector('#participants'));

      // Broschüre‑Formular
      const form=document.getElementById('brochure-form'),
            ready=document.getElementById('download-ready');
      form?.addEventListener('submit', function(e) {
        e.preventDefault();
        let isValid = true;
        
        // Validate all required fields
        form.querySelectorAll('[required]').forEach(field => {
          if (!field.value.trim()) {
            isValid = false;
            field.classList.add('invalid-input');
          } else {
            field.classList.remove('invalid-input');
          }
        });
        
        if (isValid) {
          // Hide form and show download section
          form.style.display = 'none';
          ready.classList.remove('hidden');
          
          // Remove automatic download trigger
          // Let user click the download link manually
        }
      });

      // Flip‑Card für alle Slides
      document.querySelectorAll('.slide.flip-container').forEach(slide=>{
        slide.addEventListener('click',()=>slide.classList.toggle('flipped'));
      });
      // Link‑Handler für Flip
      document.querySelectorAll('.flip-link').forEach(link=>{
        link.addEventListener('click',e=>{
          e.preventDefault();
          e.stopPropagation();
          link.closest('.slide').classList.toggle('flipped');
        });
      });
    });
  </script>

<script>
// Direkte Animation ohne IntersectionObserver
function countUp(element, target, duration) {
  let start = 0;
  const increment = target / (duration / 16); // 16ms pro Frame (ca. 60fps)
  
  function updateCount() {
    start += increment;
    if (start >= target) {
      element.textContent = target;
    } else {
      element.textContent = Math.floor(start);
      requestAnimationFrame(updateCount);
    }
  }
  
  updateCount();
}

// Scroll-Event-Handler
function checkScroll() {
  const statsSection = document.getElementById('masterclass-stats');
  const placesCounter = document.getElementById('places-counter');
  const minutesCounter = document.getElementById('minutes-counter');
  
  if (!statsSection || !placesCounter || !minutesCounter) return;
  
  const rect = statsSection.getBoundingClientRect();
  const isVisible = (
    rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.8 && 
    rect.bottom >= 0
  );
  
  if (isVisible && placesCounter.textContent === '0') {
    countUp(placesCounter, 12, 2000); // 2 Sekunden Animation
    countUp(minutesCounter, 90, 2000);
    
    // Optional: Event-Listener entfernen nach der Animation
    window.removeEventListener('scroll', checkScroll);
  }
}

// Event-Listener hinzufügen
window.addEventListener('load', function() {
  // Initial Check
  checkScroll();
  
  // Scroll-Listener
  window.addEventListener('scroll', checkScroll);
});

// Zusätzlich: Hover-Effekt
const statItems = document.querySelectorAll('.stat-item');
statItems.forEach(item => {
  item.style.transition = 'transform 0.3s ease';
  item.addEventListener('mouseenter', () => {
    item.style.transform = 'translateY(-4px)';
  });
  item.addEventListener('mouseleave', () => {
    item.style.transform = 'translateY(0)';
  });
});
</script>

