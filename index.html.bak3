      // Check if we can scroll left
      prevBtn.disabled = Math.abs(track.scrollLeft) < 1;
      
      // Check if we can scroll right
      const maxScroll = track.scrollWidth - track.clientWidth;
      nextBtn.disabled = Math.abs(track.scrollLeft - maxScroll) < 1;
    };

    const scrollAmount = () => {
      const firstSlide = track.querySelector('.slide, .testimonial-card');
      if (!firstSlide) return 0;
      return firstSlide.offsetWidth + parseInt(getComputedStyle(track).gap);
    };

    prevBtn.addEventListener('click', () => {
      track.scrollBy({
        left: -scrollAmount(),
        behavior: 'smooth'
      });
    });

    nextBtn.addEventListener('click', () => {
      track.scrollBy({
        left: scrollAmount(),
        behavior: 'smooth'
      });
    });

    // Update button states on scroll
    track.addEventListener('scroll', updateButtonStates);
    
    // Update button states on resize
    window.addEventListener('resize', updateButtonStates);
    
    // Initial state
    updateButtonStates();
  };

  // Initialize all sliders
  document.querySelectorAll('.slider-container, .testi-slider-container').forEach(initSlider);
});
